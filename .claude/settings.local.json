{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash",
      "Edit",
      "Glob",
      "Grep",
      "Read",
      "Write",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Task"
    ],
    "deny": []
  },
  "includeCoAuthoredBy": false,
  "cleanupPeriodDays": 30,
  "outputStyle": "structured",
  "statusLine": {
    "type": "command",
    "command": "npx -y ccusage statusline",
    "padding": 0
  }
}
